<%= flash[:errors] %>
<h2>New Dress Rental</h2>
<form action="<%= cat_rental_requests_url %>" method="post">
  
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <table>
      <tr>
          <td> <label for="cat_id">Cat</label></td>
          <td><select name="cat_rental_request[cat_id]" value="<%= @request.cat_id %>">
            <option>Select One</option>
            <% @cats.each do |cat| %>
              <option value="<%= cat.id %>"
                  <%= "selected" if @request.cat_id == cat.id %>>
                <%= cat.name %>
              </option>
            <% end %>            
          </select></td>
      </tr> 
      
      <tr>
          <td><label for="start_date">Start Date</label></td>
          <td><input name="cat_rental_request[start_date]" id="start_date" type="date"
             value="<%= @request.start_date %>"></td> 
      </tr>
      
      <tr>
          <td><label for="end_date">End Date</label></td>
          <td><input name="cat_rental_request[end_date]" id="end_date" type="date"
             value="<%= @request.end_date %>"></td> 
      </tr>
            
      <tr>  
        <td></td>
        <td> <input type="submit" value="Save My Request!"></td>
      </tr> 
  </table>  
            
</form>    