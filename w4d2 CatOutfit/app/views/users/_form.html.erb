<ul>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <li> <%= error %></li>  
  <% end %>
<% end %>
</ul>

<form action="<%= @user.persisted? ? user_url(@user) : users_url %>" method="post">
  <input type="hidden" name="_method" value="<%= @user.persisted? ? "PATCH" : "POST" %>">
  
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
    
  <table>
      <tr>
          <td><label for="user_name">Username: </label></td>
          <td><input name="user[user_name]" id="user_name" type="text" value="<%= @user.user_name %>"></td>
      </tr> 
       
      <tr>
          <td><label for="password">Password: </label></td>
          <td><input name="user[password]" id="password" type="password"></td> 
      </tr>
      
      <tr>  
        <td></td>
        <td> <input type="submit" value="Create User!"></td>
      </tr>
  </table>
  
  
</form>