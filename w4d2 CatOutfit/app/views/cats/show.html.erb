<%= flash[:errors] %>
<h2>Your Feline Client, <%= @cat.name %>! </h2>


<table>
    <th>Details</th>
    <th><%= link_to "Create New Rental Request", new_cat_rental_request_url %></th>
    <tr>
        <td>Name:</td>
        <td><%= @cat.name %></td>
    </tr>
    <tr>
        <td>Birthday:</td>
        <td><%= @cat.birth_date%></td>
    </tr>
    <tr>
        <td>Color:</td>
        <td><%= @cat.color.capitalize %></td>
    </tr>
    <tr>
        <td>Sex:</td>
        <td><%= @cat.sex %></td>
    </tr>
    <tr>
        <td>Description:</td>
        <td><%= @cat.description %></td>
    </tr>
    
    <tr>
        <td>Rental Requests:</td>
        <td><ul>
          <% @requests.each do |request| %>
                <li><%= [request.start_date, request.end_date].join(", ")%>
                  <% if request.pending? && @cat.user_id == current_user.id %>
                    <%= button_to "Approve!", approve_cat_rental_request_url(request) %>
                    <%= button_to "Deny!", deny_cat_rental_request_url(request) %>
                  <% end %>
                  <% if request.status == "APPROVED" %>
                  Approved!
                  <% end %>
                  <% if request.status == "DENIED" %>
                  Denied!
                  <% end %>
                </li>
          <% end %>
          
        </ul></td>
    </tr>
    
    
    
</table>
